{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@filezen/js": [
        "../../sdks/filezen-js/src"
      ],
      "@filezen/js/server": [
        "../../sdks/filezen-js/src/server"
      ],
      "@filezen/next": [
        "../../sdks/filezen-next/src"
      ],
      "@filezen/react": [
        "../../sdks/filezen-react/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 
